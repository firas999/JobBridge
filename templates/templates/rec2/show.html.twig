{% extends 'base2.html.twig' %}

{% block title %}Rec2{% endblock %}

{% block body %}
    <h1>Rec2</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rec2.id }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ rec2.texte |raw }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ rec2.date ? rec2.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('rec2_index', {'iduser': app.user.id}) }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('rec2_edit', {'id': rec2.id,'iduser':app.user.id}) }}">edit</a>
    {% endif %}
    {{ include('rec2/_delete_form.html.twig') }}

{% endblock %}
