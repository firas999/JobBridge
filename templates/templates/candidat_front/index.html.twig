
  {% extends 'base2.html.twig' %}

{% block title %}employee index{% endblock %}

{% block body %}



    <div class="expert_doctors_area doctor_page">

    <div class="container" >
        <div class="row">
            {% for candidat in candidats %}

                <div class="col-md-6 col-lg-3" >
                    <div class="single_expert mb-40">
                        <a class="single_expert mb-40" href="{{ path('candidatfront_show', {'id': candidat.id}) }}">
                            <div class="expert_thumb" >
                                <img src="/uploads/{{candidat.img}}"  style="height:300px; width:300px" alt="">
                            </div>
                            <div class="experts_name text-center" >
                                <h3>{{  candidat.nom }}</h3>
                                <span href="{{ path('candidatfront_show', {'id': candidat.id}) }}">{{candidat.prenom }}</span>
                            </div>

                        </a>
                    </div>
                </div>








            {% else %}

                <tr>
                    <td colspan="10">no records found</td>
                </tr>

            {% endfor %}
        </div>

        <a  class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn" href="{{ path('candidatfront_new') }}">Create new</a>





    </div>

{% endblock %}