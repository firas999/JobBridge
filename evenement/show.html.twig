{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}

    <h1>Evenement</h1>

    <table class="table" id="customers">
        <tbody>
            <tr>
                <th>Identifiant de l'évenement</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom </th>
                <td>{{ evenement.Nom }}</td>
            </tr>
            <tr>
                <th>Entreprise organisatrice</th>
                <td>{{ evenement.Entreprise }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.Description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.Date ? evenement.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Horaire</th>
                <td>{{ evenement.Horaire ? evenement.Horaire|date('H:i') : '' }}</td>
            </tr>

            <tr>
                <th>Adresse</th>
                <td>{{ evenement.Adresse }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ evenement.Prix }}</td>
            </tr>
            <tr>
                <th>Capacité </th>
                <td>{{ evenement.Cap }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('evenement_index') }}">Retourner à la liste de évenements</a>

    <a href="{{ path('evenement_edit', {'id': evenement.id}) }}">Modifier</a>

    {{ include('evenement/_delete_form.html.twig') }}

{% endblock %}
